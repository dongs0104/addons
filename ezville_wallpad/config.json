{
	"version": "0.0.1.bf29fec",
	"slug": "ezville_wallpad",
	"name": "EzVille RS485 Addon (MQTT)",
	"description": "이지빌용 월패드 애드온 (MQTT 전용 모드)",
	"url": "https://github.com/dongs0104/addons",
	"startup": "application",
	"boot": "auto",
	"arch": [ "armhf", "armv7", "aarch64", "amd64", "i386" ],

	"map": [ "share:rw" ],

	"options": {
		"wallpad_mode": "on",
		"rs485_mqtt": {
			"recv_topic": "ew11/recv",
			"send_topic": "ew11/send"
		},
		"mqtt": {
			"server": "127.0.0.1",
			"port": 1883,
			"need_login": true,
			"user": "",
			"passwd": "",
			"discovery": true,
			"prefix": "ezville"
		},
		"rs485": {
			"max_retry": 20
		},
		"watchdog": {
			"timeout": 60
		},
		"restart": {
			"time": "04:00",
			"inactivity": 0
		},
		"log": {
			"to_file": true,
			"filename": "/share/ezville_wallpad.log"
		}
	},
	"schema": {
		"wallpad_mode": "list(on|off)",
		"rs485_mqtt": {
			"recv_topic": "str",
			"send_topic": "str"
		},
		"mqtt": {
			"server": "str",
			"port": "int(0,65535)",
			"need_login": "bool",
			"user": "str?",
			"passwd": "str?",
			"discovery": "bool",
			"prefix": "str"
		},
		"rs485": {
			"max_retry": "int(0,100)"
		},
		"watchdog": {
			"timeout": "int(0,3600)"
		},
		"restart": {
			"time": "str?",
			"inactivity": "int(0,1440)"
		},
		"log": {
			"to_file": "bool",
			"filename": "str"
		}
	}
}
